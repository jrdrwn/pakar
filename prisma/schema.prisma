generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model karya {
  karya_id    Int           @id @default(autoincrement())
  about       String?       @db.Text
  title       String
  image       String?       @db.Text
  category_id Int
  author      Int
  visitor     Int           @default(0)
  likes_count Int           @default(0)
  created_at  DateTime?     @default(dbgenerated("(now())")) @db.DateTime(0)
  categories  categories    @relation(fields: [category_id], references: [category_id], onDelete: NoAction, onUpdate: NoAction, map: "FK_karya_category")
  user        users         @relation(fields: [author], references: [user_id], onDelete: NoAction, onUpdate: NoAction, map: "Karya_author_fkey")
  likes       likes[]       @ignore
  sneak_peeks sneak_peeks[] @ignore

  @@index([category_id], map: "category_id")
  @@index([author], map: "author")
}

model categories {
  category_id Int     @id @default(autoincrement())
  name        String  @unique(map: "name")
  karya       karya[]
}

model users {
  user_id     Int     @id @default(autoincrement())
  username    String
  password    String
  first_name  String
  last_name   String?
  middle_name String?
  email       String  @unique(map: "email")
  image       String? @db.Text
  karya       karya[]
  likes       likes[] @ignore
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model likes {
  user_id  Int
  karya_id Int
  karya    karya @relation(fields: [karya_id], references: [karya_id], onDelete: NoAction, onUpdate: NoAction, map: "FK__karya")
  users    users @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction, map: "FK__users")

  @@index([karya_id], map: "karya_id")
  @@index([user_id], map: "user_id")
  @@ignore
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model sneak_peeks {
  karya_id Int
  image    String? @db.Text
  karya    karya   @relation(fields: [karya_id], references: [karya_id], onDelete: NoAction, onUpdate: NoAction, map: "sneak_peeks_ibfk_1")

  @@index([karya_id], map: "karya_id")
  @@ignore
}
