generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = "mysql://root@localhost:3306/pakar"
  directUrl = "mysql://root@localhost:3306/pakar"
}

model User {
  user_id     Int     @id @default(autoincrement())
  username    String  @unique
  password    String
  first_name  String
  last_name   String?
  middle_name String?
  email       String  @unique
  Karya       Karya[]
}

model Karya {
  karya_id    Int      @id @default(autoincrement())
  tag         String
  description String?
  title       String
  date        DateTime
  cover       String?
  author      Int
  user        User     @relation(fields: [author], references: [user_id])
}

enum Gender {
  L
  P
}
